---
interface Props {
  /**
   * Any class(es) to be added to the `table`
   * @default "table"
   */
  cssClass?: string
}

const { cssClass = 'table' } = Astro.props

// TODO: is there a better way to handle this component???
let slotContent = await Astro.slots.render('default', [])
slotContent = slotContent.replace('<table>', `<table class="${cssClass}">`)
---

<div class="table-responsive" set:html={slotContent} />
